@model Enginex.Web.ViewModels.Admin.ProductDeleteViewModel

<section>
    <div class="container mt-5">
        <div class="row block-9">
            <div class="col-lg-12 ftco-animate">
                <div class="row">
                    <div class="col-md-12 mb-4">
                        <h3>Naozaj chcete odstrániť produkt '@Model.Name' (Typ: '@Model.Type') ?</h3>
                    </div>
                </div>
                <div class="mb-3">
                    <form asp-controller="Admin" asp-action="DeleteProduct" method="post" class="contact-form">
                        <div class="form-group">
                            <input type="hidden" asp-for="@Model.Id" />
                            <input type="submit" value="Zmazať" class="btn btn-primary py-3 px-5">
                            <a asp-controller="Admin" asp-action="Products" class="btn btn-primary py-3 px-5">Späť</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>