@model Enginex.Web.ViewModels.Admin.CategoryCreateViewModel

<section>
    <div class="container mt-5">
        <div class="row block-9">
            <div class="col-lg-12 ftco-animate">
                <div class="row">
                    <div class="col-md-12 mb-4">
                        <h3>Nová kategória</h3>
                    </div>
                </div>
                <div class="mb-3">
                    <form asp-controller="Admin" asp-action="CreateCategory" method="post" class="contact-form">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="NameSlovak">Názov (sk)</label>
                            <div class="text-danger"><span asp-validation-for="NameSlovak"></span></div>
                            <input asp-for="NameSlovak" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="NameEnglish">Názov (en)</label>
                            <div><span asp-validation-for="NameEnglish" class="text-danger"></span></div>
                            <input asp-for="NameEnglish" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Order">Poradie (pri zobrazení na stránke)</label>
                            <div><span asp-validation-for="Order" class="text-danger"></span></div>
                            <input asp-for="Order" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Uložiť" class="btn btn-primary py-3 px-5">
                            <a asp-controller="Admin" asp-action="Categories" class="btn btn-primary py-3 px-5">Späť</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>