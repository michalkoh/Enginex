@model Enginex.Web.ViewModels.Admin.CategoryEditListViewModel

<section>
    <div class="container mt-5">
        <div class="row block-9">
            <div class="col-lg-12 ftco-animate">
                <div class="row">
                    <div class="col-md-12 mb-4">
                        <h3>Kategórie</h3>
                    </div>
                </div>
                <div class="mb-5">
                    <div class="m-2">
                        @if (Model.CanCreateCategory)
                        {
                            <a asp-controller="Admin" asp-action="CreateCategory">Pridať novú kategóriu</a>
                        }
                        else
                        {
                            <span>Max. povolený počet kategórií, pridanie novej kategórie nie je momentálne možné.</span>
                        }
                    </div>
                    <table class="table table-dark table-hover table-sm">
                        <thead>
                            <tr>
                                <th scope="col">Názov</th>
                                <th scope="col">Upraviť</th>
                                <th scope="col">Zmazať</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model.Categories)
                            {
                                <tr>
                                    <td>@category.Name.Slovak</td>
                                    <td><a asp-controller="Admin" asp-action="EditCategory" asp-route-id="@category.Id">Upraviť</a></td>
                                <td><a asp-controller="Admin" asp-action="DeleteCategory" asp-route-id="@category.Id">Zmazať</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>