@model Enginex.Web.ViewModels.Admin.ProductCreateViewModel

<section>
    <div class="container mt-5">
        <div class="row block-9">
            <div class="col-lg-12 ftco-animate">
                    <div class="row">
                        <div class="col-md-12 mb-4">
                            <h3>Nový produkt</h3>
                        </div>
                    </div>
                <div class="mb-3">
                    <form enctype="multipart/form-data" asp-action="CreateProduct" method="post" class="contact-form">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="SelectedCategoryId">Kategória</label>
                            <div><span asp-validation-for="SelectedCategoryId" class="text-danger"></span></div>
                            <select asp-for="SelectedCategoryId" class="custom-select"
                                    asp-items="@(new SelectList(Model.Categories, "Id", "Name"))"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="NameSlovak">Názov (sk)</label>
                            <div><span asp-validation-for="NameSlovak" class="text-danger"></span></div>
                            <input asp-for="NameSlovak" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="NameEnglish">Názov (en)</label>
                            <div><span asp-validation-for="NameEnglish" class="text-danger"></span></div>
                            <input asp-for="NameEnglish" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Type">Typ</label>
                            <div><span asp-validation-for="Type" class="text-danger"></span></div>
                            <input asp-for="Type" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="DescriptionSlovak">Popis (sk)</label>
                            <div><span asp-validation-for="DescriptionSlovak" class="text-danger"></span></div>
                            <textarea asp-for="DescriptionSlovak" rows="3" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="DescriptionEnglish">Popis (en)</label>
                            <div><span asp-validation-for="DescriptionEnglish" class="text-danger"></span></div>
                            <textarea asp-for="DescriptionEnglish" rows="3" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="Image">Foto</label>
                            <div><span asp-validation-for="Image" class="text-danger"></span></div>
                            <div class="custom-file">
                                <input asp-for="Image" class="form-control custom-file-input">
                                <label class="custom-file-label">Vybrať súbor...</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Uložiť" class="btn btn-primary py-3 px-5">
                            <a asp-controller="Admin" asp-action="Products" class="btn btn-primary py-3 px-5">Späť</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}