@model Enginex.Web.ViewModels.Account.UserDeleteViewModel

<section>
    <div class="container mt-5">
        <div class="row block-9">
            <div class="col-lg-12 ftco-animate">
                <div class="row">
                    <div class="col-md-12 mb-4">
                        <h3>Naozaj chcete odstrániť administrátora '@Model.Email' ?</h3>
                    </div>
                </div>
                <div class="mb-3">
                    <form asp-controller="Account" asp-action="DeleteUser" method="post" class="contact-form">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <input type="hidden" asp-for="@Model.Email" />
                            <input type="submit" value="Zmazať" class="btn btn-primary py-3 px-5">
                            <a asp-controller="Account" asp-action="Users" class="btn btn-primary py-3 px-5">Späť</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>