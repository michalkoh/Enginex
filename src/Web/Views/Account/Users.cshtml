@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<section>
    <div class="container mt-5">
        <div class="row block-9">
            <div class="col-lg-12 ftco-animate">
                <div class="row">
                    <div class="col-md-12 mb-4">
                        <h3>Administrátori</h3>
                    </div>
                </div>
                <div class="mb-5">
                    <div class="m-2">
                        <a asp-controller="Account" asp-action="CreateUser">Pridať nového administrátora</a>
                    </div>
                    <table class="table table-dark table-hover table-sm">
                        <thead>
                            <tr>
                                <th scope="col">Administrátor</th>
                                <th scope="col">Overený email</th>
                                <th scope="col">Zmazať</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>@user.EmailConfirmed</td>
                                    <td><a asp-controller="Account" asp-action="DeleteUser" asp-route-email="@user.Email">Zmazať</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                </div>
        </div>
    </div>
</section>