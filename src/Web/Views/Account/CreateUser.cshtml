@model Enginex.Web.ViewModels.Account.UserCreateViewModel

<section>
    <div class="container mt-5">
        <div class="row block-9">
            <div class="col-lg-12 ftco-animate">
                <div class="row">
                    <div class="col-md-12 mb-4">
                        <h3>Nový administrátor</h3>
                    </div>
                </div>
                <div class="mb-3">
                    <form asp-controller="Account" asp-action="CreateUser" method="post" class="contact-form">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <div class="text-danger"><span asp-validation-for="Email"></span></div>
                            <input asp-for="Email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="EmailConfirmed">Overenie emailu:</label>
                            <div class="text-danger"><span asp-validation-for="EmailConfirmed"></span></div>
                            <input asp-for="EmailConfirmed" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Uložiť" class="btn btn-primary py-3 px-5">
                            <a asp-controller="Account" asp-action="Users" class="btn btn-primary py-3 px-5">Späť</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>